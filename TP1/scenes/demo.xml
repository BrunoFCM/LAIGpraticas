<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <perspective id="testPerspectiveCamera" near="0.2" far="250" angle="65">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="vidral" file="scenes/images/vidral.jpg" />
        <texture id="bank" file="scenes/images/bank.jpg" />
        <texture id="trunk" file="scenes/images/trunk-image.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="AureolaMat" shininess="10">
            <emission r="1.0" g="1.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="0.0" a="1.0" />
            <specular r="1.0" g="1.0" b="0.0" a="1.0" />
        </material>

        <material id="CrystalMat" shininess="10">
            <emission r="0.0" g="0.288" b="0.241" a="0.1" />
            <ambient r="0.0" g="0.988" b="0.941" a="1.0" />
            <diffuse r="0.0" g="0.588" b="0.541" a="1.0" />
            <specular r="0.01" g="0.988" b="0.941" a="1.0" />
        </material>

        <material id="StaffMat" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.529" g="0.266" b="0.0" a="1.0" />
            <diffuse r="0.529" g="0.266" b="0.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="HiltMat" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.929" g="0.792" b="0.172" a="1.0" />
            <specular r="0.929" g="0.792" b="0.172" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="-1" y1="-1" x2="1" y2="1" />
        </primitive>
        
        <primitive id="demoSphere">
            <sphere radius="1" slices="100" stacks="100" />
        </primitive>
        
        <primitive id="torus">
            <torus inner="0.05" outer="3" slices="100" loops="100" />
        </primitive>
        
        <primitive id="cylinder">
            <cylinder base="1" top="1" height="1" slices="100" stacks="3" />
        </primitive>

        <primitive id="pyramid">
            <cylinder base="1" top="0" height="1" slices="4" stacks="3" />
        </primitive>

        <primitive id="bottom_crystal">
            <cylinder base="0.5" top="1" height="1" slices="4" stacks="3" />
        </primitive>
        
    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>
                <translate x="0" y="0" z="0" />
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="vidral"/>
            <children>
                <componentref id="HiltSph"/>
                <componentref id="StaffCyl"/>
                <componentref id="Crystal"/>
                <componentref id="Aureolas"/>
            </children>
        </component>

        <component id="Crystal">
            <transformation>
                <translate x="0" y="0" z="0" />
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="CrystalMat" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="TopCrystalCyl" />
                <componentref id="BotCrystalCyl" />
                <componentref id="CrystalRec" />
            </children>
        </component>

        <component id="Aureolas">
            <transformation>
                <translate x="0" y="0" z="0" />
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="Aureola1" />
                <componentref id="Aureola2" />
                <componentref id="Aureola3" />
            </children>
        </component>

        <component id="HiltSph">
            <transformation>
                <translate x="0" y="0" z="0" />
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="HiltMat" />
            </materials>
            <texture id="bank"/>
            <children>
                <primitiveref id="demoSphere" />
            </children>
        </component>

        <component id="StaffCyl">
            <transformation>
                <translate x="0" y="0" z="1" />
                <scale x="0.3" y="0.3" z="10" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="cylinder" />
            </children>
        </component>

        <component id="CrystalRec">
            <transformation>
                <translate x="0" y="0" z="11" />
                <scale x="0.5" y="0.5" z="1" />
                <rotate axis="x" angle="180" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="BotCrystalCyl">
            <transformation>
                <translate x="0" y="0" z="11" />
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="bottom_crystal" />
            </children>
        </component>

        <component id="TopCrystalCyl">
            <transformation>
                <translate x="0" y="0" z="12" />
                <scale x="1" y="1" z="2" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="pyramid" />
            </children>
        </component>

        <component id="Aureola1">
            <transformation>
                <translate x="0" y="0" z="12" />
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="torus" />
            </children>
        </component>

        <component id="Aureola2">
            <transformation>
                <translate x="0" y="0" z="14" />
                <scale x="0.5" y="0.5" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="torus" />
            </children>
        </component>

        <component id="Aureola3">
            <transformation>
                <translate x="0" y="0" z="10" />
                <scale x="0.5" y="0.5" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="torus" />
            </children>
        </component>
        
    </components>
</lxs>